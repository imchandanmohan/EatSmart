# =============================================================================
# EatSmart Configuration Template
# Copy this file to .env and update with your actual values
# =============================================================================

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000
MCP_SERVER_NAME=eatsmart

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_NAME=EatSmart Assistant

# Alternative: SendGrid Configuration (uncomment if using)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# OpenFoodFacts API (usually no key required)
OPENFOODFACTS_BASE_URL=https://world.openfoodfacts.org
OPENFOODFACTS_USER_AGENT=EatSmart/1.0.0

# Vector Database Configuration
# ChromaDB (local)
CHROMADB_PATH=./data/chromadb
CHROMADB_COLLECTION_NAME=eatsmart_products

# Pinecone (cloud) - uncomment if using
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-environment
# PINECONE_INDEX_NAME=eatsmart-index

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# RAG Configuration
RAG_TOP_K_RESULTS=10
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_CONTEXT_LENGTH=4000

# Cache Configuration
ENABLE_CACHING=True
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Image Processing
MAX_IMAGE_SIZE=1024x1024
IMAGE_QUALITY=85
SUPPORTED_IMAGE_FORMATS=jpg,png,webp

# Nutrition Analysis
HEALTH_SCORE_WEIGHTS_SUGAR=0.25
HEALTH_SCORE_WEIGHTS_SALT=0.25
HEALTH_SCORE_WEIGHTS_FAT=0.25
HEALTH_SCORE_WEIGHTS_ADDITIVES=0.25

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
MAX_PRODUCTS_PER_REQUEST=50

# Security
SECRET_KEY=your-secret-key-change-this-in-production
API_KEY_HEADER=X-API-Key

# Optional: External AI Services
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional: Redis Cache (uncomment if using)
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your-redis-password

# Database Configuration (SQLite default)
DATABASE_URL=sqlite:///./data/eatsmart.db
DATABASE_ECHO=False

# Monitoring and Logging
ENABLE_STRUCTURED_LOGGING=True
LOG_FILE_PATH=./logs/eatsmart.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Development Settings
RELOAD_ON_CHANGE=True
ENABLE_CORS=True
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]